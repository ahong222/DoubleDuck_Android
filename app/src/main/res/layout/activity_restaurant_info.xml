<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/Logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="28dp"
        android:src="@drawable/logo1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/clickChangeLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="点击更换商标"
        android:textColor="@color/cadetBlue"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/Logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="156dp"/>

    <LinearLayout
        android:id="@+id/NameLayout"
        android:layout_width="368dp"
        android:layout_height="51dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clickChangeLogo">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商家名称: "
            android:textColor="@color/cadetBlue"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/Name"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_weight="2"
            android:text="双鸭山饭店"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="18sp"
            android:theme="@style/myEditText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/DesLayout"
        android:layout_width="368dp"
        android:layout_height="62dp"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NameLayout"
        >

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商家描述: "
            android:textColor="@color/cadetBlue"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/Des"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="双鸭山饭店双鸭山饭店双鸭山饭店"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="16sp"
            android:theme="@style/myEditText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LocLayout"
        android:layout_width="368dp"
        android:layout_height="62dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DesLayout">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="商家地址: "
            android:textColor="@color/cadetBlue"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/Loc"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="我在马路边"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="16sp"
            android:theme="@style/myEditText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/PhoneLayout"
        android:layout_width="365dp"
        android:layout_height="49dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LocLayout">

        <TextView
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="联系方式: "
            android:textColor="@color/cadetBlue"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/Phone"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_weight="2"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="0220-8808820"
            android:textCursorDrawable="@drawable/cursor_color"
            android:textSize="16sp"
            android:theme="@style/myEditText"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/Cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/cadetBlue"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/Sure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定更改"
            android:textColor="@color/cadetBlue"
            android:textSize="20sp"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
